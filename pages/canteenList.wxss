.container {
  background: #f6f7f9;
}

.search-bar {
}

.icon-location {
  padding-right: 5rpx;
}

.location {
  max-width: 126rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  transition: all 0.1s;
  padding: 16rpx 0;
}

.search-round {
  background: rgba(255, 255, 255, 0.9) !important;
  /* transition: all 1s; */
}

.search-input {
  flex: 1;
  padding-right: 32rpx;
}

.search-board {
  height: 0;
  opacity: 0;
  background: rgba(225, 225, 225, 0.7);
  transition: all 0.3s;
  overflow: auto;
}

.list-li {
  border-bottom: none !important;
}

.history-item {
  width: auto;
  height: auto;
  padding: 10rpx;
  max-width: 250rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 5rpx 10rpx;
  background: rgba(238, 238, 238, 0.7);
  border-radius: 8rpx;
}

.suggestion-item {
  width: 100%;
  height: auto;
  padding: 0rpx 30rpx;
  margin-bottom: 36rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  display: flex;
  align-items: flex-start;
  border: none;
  position: relative;
  font-size: 32rpx;
}

.search-suggestion-text {
  padding-left: 15rpx;
}

.search-suggestion-icon {
  width: auto !important;
  line-height: inherit !important;
  font-size: inherit !important;
}

/* 商铺列表 */
.goods-list-li{
  margin-bottom: initial;
  border-bottom: 0.5rpx solid #eee;
}

/* 商铺头像部分 */

.c-avatar-wrap {
  width: 160rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.c-avatar {
  width: 160rpx;
  height: 160rpx;
}

/* 商铺信息部分 */

.icon-image {
  background: inherit !important;
  border-radius: 0 !important;
}

.rating-item {
  display: flex;
  line-height: 60rpx;
}

.rating-text.gray-text text {
  padding: 0 10rpx;
}

.c-name {
  flex: 1;
  padding-right: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 260rpx;
}

.c-address {
  color: #dd514c;
  /* font-size: 36rpx; */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 480rpx;
}

.c-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: bold;
}

.c-list-top {
  /* border-bottom: .5rpx solid rgba(238, 238, 238, 0.7); */
  width: 100%;
  height: 160rpx;
}

/* 商铺活动即公告 */

.c-tips {
  max-width: 360rpx;
}

.c-tips text {
  padding: 5rpx 10rpx;
}

.c-tips text:last-child {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: initial;
}

.c-time{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  border: none;
}
.c-time text{
  padding: 1rpx 5rpx;
  border-bottom: 0.5rpx solid #0081ff;
}